@import '../../images/icons/indexDetail.wxss';
@import '../../images/icons/iconfontTribe.wxss';

.mustgo_container {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.mustgo_content {
  width: 92%;
  height: 100%;
  padding-top: 20rpx;
  margin-left: 30rpx;
  background: white;
}
.title-box {
  width: 100%;
  height: 90rpx;
  margin-top: -21rpx;
  line-height: 90rpx;
  font-weight: bold; 
  position: fixed;
  background: white;
  z-index: 100;
  font-size: 44rpx;
}
.collection-img {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
  left: 430rpx;
}
.place_classify {
  font-size: 28rpx;
  color: #1296db;
  position: relative;
  top: 65rpx;
}
.detail_label {
  font-size: 24rpx;
  color: #cdcdcd;
  margin: 20rpx auto;
  margin-top: 90rpx;
}
.detail_label text {
  padding: 3rpx 8rpx;
  margin-right: 15rpx;
  border: 4rpx solid #cdcdcd;
  border-radius: 5rpx;
}
.people_place {
  font-size: 36rpx;
  font-family: "SimHei";
  font-weight: bold;
}
.people_pic {
  height: 300rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  margin: 40rpx auto;
}
.people_pic image {
  width: 300rpx; 
  height: 200rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.hot_content {
  margin: 20rpx auto;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.font_box {
  width: 300rpx;
  height: 140rpx;
  font-size: 32rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background-color: #f8f8f8;
}
.font_content {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;  /* 控制多行的行数 */
  -webkit-box-orient: vertical;
}
.font_scan {
  position: relative;
  top: 20rpx;
  font-size: 28rpx;
  color: #cdcdcd;
}
.place_detail {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
.place_detail i {
  position: relative;
  top: 30rpx;
}
.font_weizhi {
  width: 500rpx;
  position: relative;
  top: -20rpx;
  left: 50rpx;
}
.font_introduce {
  width: 500rpx;
  position: relative;
  top: -52rpx;
  left: 200rpx;
}
.xiaozhu_comment {
  font-size: 36rpx;
  margin-bottom: 40rpx;
}
.user_message {
  display: flex;
  flex-direction: row;
  margin: 30rpx auto;
}
.user_message image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 45rpx;
  margin-right: 20rpx;
}
.user_message text {
  font-size: 32rpx;
  font-weight: bold;
}
.content_pic {
  margin: 10rpx auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.content_pic image {
  width: 170rpx;
  height: 170rpx;
  border-radius: 5rpx;
}