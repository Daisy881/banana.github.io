@import "/images/icons/tip.wxss";
.toast-out {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  width: 100%;
  height: 100%;
  display: flex;             /*小程序中多使用flex布局，很方便的*/
  justify-content: center;
  align-items: center;
}
.toast-out .toast-in {
  min-width: 100rpx;
  max-width: 300rpx;
  background: rgba(0, 0, 0, 0.7);
  padding: 30rpx;
  text-align: center;
  color: white;
  border-radius: 20rpx;
}
.toast-out .toast-in span {
  font-size: 70rpx;
}
.toast-out .toast-in .toast-txt {
  font-size: 32rpx;
  margin-top: 20rpx;
}